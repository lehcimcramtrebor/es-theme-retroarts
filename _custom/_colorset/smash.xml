		</image>
		
		<image name="bayer" extra="true">
         <color>7dea30</color>
		</image>

		<image name="ring" extra="true">
         <color>101010</color>		 		
         <colorEnd>000000</colorEnd>
		<gradientType>vertical</gradientType>
		</image>

		<image name="bloom_ring" extra="true">
         <color>ffff2090</color>
         <colorEnd>ffff00</colorEnd>
