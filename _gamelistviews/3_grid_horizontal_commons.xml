<theme>

	<formatVersion>4</formatVersion>
	
	<include>./2_grid_commons.xml</include>

<view name="grid">

	     <image name="list_frame" extra="true">
         <colorEnd>000000</colorEnd>
		 <gradientType>vertical</gradientType>
		 </image>  
			
		<image name="background" extra="true">
			<color>909090</color>
		</image>

	  
    <imagegrid name="gamegrid">
	  <pos>0.2408 0</pos>
      <size>0.683 1</size>
      <padding>0 0.15 0 0.4</padding>
      <scrollDirection>horizontal</scrollDirection>
      <autoLayout>3 1</autoLayout>
      <autoLayoutSelectedZoom>1.4</autoLayoutSelectedZoom>
      <margin>0.005 0.010</margin>
      <centerSelection>true</centerSelection>
      <scrollLoop>true</scrollLoop>
	  <zIndex>9</zIndex>         		
    </imagegrid>
    <gridtile name="default">
      <padding>64 16</padding>
      <backgroundCenterColor>FFFFFF00</backgroundCenterColor>
      <backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
      <imageSizeMode>maxSize</imageSizeMode>
      <imageColor>ffffff</imageColor>
      <reflexion>0.5 0.0</reflexion>
    </gridtile>
    <gridtile name="selected">
      <backgroundCenterColor>FFFFFF00</backgroundCenterColor>
      <backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
      <padding>64 16</padding>
    </gridtile>
    <text name="gridtile">
     <color>00000000</color>
      <backgroundColor>00000000</backgroundColor>
      <fontSize>0.030</fontSize>
      <fontPath>./../_assets/GOOSEBERRY.OTF</fontPath>		 	  
      <alignment>center</alignment>
      <size>1 0.24</size>
    </text>
    <text name="gridtile:selected">
      <color>00ff00</color>
      <glowColor>101010</glowColor>
      <glowSize>5</glowSize>
      <backgroundColor>00000000</backgroundColor>
      <fontSize>0.030</fontSize>
      <fontPath>./../_assets/GOOSEBERRY.OTF</fontPath>		 	  
      <alignment>center</alignment>
      <size>1 0.24</size>
    </text>

   <image name="gridtile.marquee">
      <color>00000000</color>
      <pos>0.5 1.2</pos>
      <origin>0.5 0</origin>
      <size>1 1</size>
    </image>
	
    <image name="gridtile.marquee:selected">
      <origin>0.5 0</origin>
      <pos>0.5 1.15</pos>
      <color>FFFFFFFF</color>
      <size>1.4 0.8</size>
    </image>

    <image name="gridtile.marquee:videoplaying">
      <origin>1 0.5</origin>
      <color>FFFFFF00</color>
      <pos>1 1.15</pos>
      <size>0.50 0.2</size>
    </image>

   </view> 
	
</theme>